<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_round_header">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/titleMaterialTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/closeImageButton"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:text="Lorem ipsum"
        android:layout_margin="@dimen/common_dimen_8dp"
        android:textColor="@color/white"/>

    <ImageButton
        android:id="@+id/closeImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/common_dimen_8dp"
        app:srcCompat="@drawable/close"
        tools:ignore="ContentDescription" />

</RelativeLayout>